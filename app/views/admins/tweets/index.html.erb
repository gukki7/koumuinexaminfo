<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="post_search">
        <%= form_with url: admins_tweets_path, method: :get, local: true do |f| %>
          <%= f.text_field :search, class: 'form-control', placeholder: "キーワード検索"  %>
          <%= f.button :type => "submit" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
      <h2>掲示板</h2>
      <table class="table">
        <thead>
          <tr>
          <th>タイトル</th>
          <th>本文</th>
          <th colspan = "2"></th>
          </tr>
        </thead>
        <tbody>
        <% if @section_title.present? %>
          <tr><%= @section_title %></tr>
        <% end %>
      　<% @tweets.each do |tweet| %>
        <tr>
         <td><%=  link_to tweet.title, admins_tweet_path(tweet.id) %></td>
         <td><%= tweet.body %></td>
         <td><%= link_to "#{tweet.tweet_comments.count} コメント", admins_tweet_path(tweet.id) %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>