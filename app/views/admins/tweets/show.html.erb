<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
    <h2>投稿詳細</h2><br>
      <table class="table">
        <thead>
          <tr>
          <th>タイトル</th>
          <th>本文</th>
          <th>投稿者名</th>
          <th colspan = "2"></th>
          </tr>
        </thead>
        <tbody>
          <td><%= @tweet.title %></td>
          <td><%= @tweet.body %></td>
          <td><%= @customer.last_name %></td>
          <td> <%= link_to "投稿を削除する", admins_tweet_path(@tweet.id), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
        </tbody>
      </table>
      <div class="col-10">
        <h5>コメント件数：<%= @tweet_comments.count %></h5>
        <% @tweet_comments.each do |tweet_comment| %>
          <p><%= tweet_comment.customer.last_name %>
             <%= tweet_comment.created_at.strftime('%Y/%m/%d') %></p>
          <p><%= tweet_comment.comment %>
             <%= link_to "削除", admins_tweet_tweet_comment_path(tweet_comment), method: :delete %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>