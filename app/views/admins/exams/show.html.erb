<div class="container">
  <div class="col-md-12 offset-md-6 mx-auto">
    <h2>試験詳細</h2><br>
      <br><br><br><br>
      <table class="table">
        <tbody>
          <tr>
            <td>試験名</td>
            <td><%= @exam.name %></td>
          </tr>
          <tr>
           <tr>
            <td>試験科目</td>
            
              <% @exam.subjects.each do |subject| %>
              <td><%= subject.name %> </td>
              <%end%>
             
          </tr>
          <tr>
            <td>試験難易度</td>
           <td> <div id="star-rate<%= @exam.id %>"></div></td>
            <script>
              $('#star-rate<%= @exam.id%>').raty({
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= @exam.level %>,
              });
            </script>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @exam.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @exam.genre.name %></td>
          </tr>
        </tbody>
      </table>
      <div class="col-md-offset-1 col-md-2 text-right">
        <%= link_to "編集する", edit_admins_exam_path(@exam), class: "btn btn-primary" %>
      </div>
    </div>
  </div>