<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <h2>投稿詳細</h2>
      <div class = "table">
        <td><%= @tweet.title %></td>
        <td><%= @tweet.body %></td>
        <td><%= @customer.last_name %></td>
        <% if @tweet.customer == current_customer %>
        <td> <%=  link_to "編集する", edit_customers_tweet_path(@tweet.id) %></td>
        <td> <%= link_to "投稿を削除する", customers_tweet_path(@tweet.id), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
        <% end %>
      </div>
      <div>
        <p>コメント件数：<%= @tweets.count %></p>
        <% @tweet_comments.each do |tweet_comment| %>
          <%= tweet_comment.customer.last_name %>
          <%= tweet_comment.created_at.strftime('%Y/%m/%d') %><%= tweet_comment.comment %>
          <% if post_comment.user == current_user %>
            <%= link_to "削除", customers_tweet_tweet_comment_path(tweet_comment), method: :delete %>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= form_for(@tweets, @tweet_comment, url: customers_tweet_tweet_comments_path) do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>