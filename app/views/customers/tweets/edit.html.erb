<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>投稿編集画面</h1>
    <% if @tweet.errors.any? %>
      <%= @tweet.errors.count %>error
      <ul>
        <% @tweet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_for(@tweet, url: customers_tweet_path) do |f| %>
      <h4>タイトル</h4>
      <%= f.text_field :title %>

      <h4>本文</h4>
      <%= f.text_area :body, class: "form-control",size: "30x10" %>

     <div><%= f.submit '更新する' %></div>
    <% end %>
    <%=  link_to "投稿詳細", customers_tweet_path(@tweet.id) %>
    <%=  link_to "戻る", customers_tweets_path %>
    </div>
  </div>
</div>