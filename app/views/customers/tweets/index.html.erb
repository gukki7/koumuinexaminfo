<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
        <th>タイトル</th>
        <th>本文</th>
        <th colspan = "2"></th>
        </tr>
      </thead>
      <tbody>
    　<% @tweets.each do |tweet| %>
      <tr>
       <td><%=  link_to tweet.title, customers_tweet_path(tweet.id) %></td>
       <td><%= tweet.body %></td>
      </tr>
      <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>